{
  "name": "server",
  "version": "1.0.0",
  "description": "server built with mongodb nodejs and changestream",
  "main": "server.js",
  "scripts": {
    "client-install": "cd ./mern-project && npm install",
    "server-install": "npm install && pip install selenium",
    "server": "cd ./server && nodemon server.js",
    "start": "cd ./server && node server.js",
    "control": "cd ./server && node ./server/backend_control/server.js",
    "client": "cd ./mern-project && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "concurrently \"npm run start\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false cd mern-project && npm install && npm run build"
  },
  "author": "William Q",
  "license": "MIT",
  "dependencies": {
    "JSONStream": "^1.3.5",
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.2.1",
    "express": "^4.17.1",
    "json5": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.13.9",
    "node-cron": "^3.0.0",
    "react-router-dom": "^5.3.0",
    "socket.io": "^4.1.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.12"
  }
}
